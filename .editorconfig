root = true

# -------------------------
# Global whitespace settings
# -------------------------
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4

# -------------------------
# C# code style + analyzers
# -------------------------
[*.cs]

##########
# VAR
##########
csharp_style_var_for_built_in_types = true:error
csharp_style_var_when_type_is_apparent = true:error
csharp_style_var_elsewhere = true:error
dotnet_diagnostic.IDE0007.severity = error
dotnet_diagnostic.IDE0008.severity = error

##########
# Naming conventions
##########

# Private fields: _camelCase
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.private_field_style.required_prefix = _
dotnet_naming_style.private_field_style.capitalization = camel_case

dotnet_naming_rule.private_fields_underscore.severity = error
dotnet_naming_rule.private_fields_underscore.symbols = private_fields
dotnet_naming_rule.private_fields_underscore.style = private_field_style

# Constants: PascalCase
dotnet_naming_symbols.constants.applicable_kinds = field
dotnet_naming_symbols.constants.required_modifiers = const

dotnet_naming_style.constants_pascal.capitalization = pascal_case

dotnet_naming_rule.constants_pascal_case.severity = error
dotnet_naming_rule.constants_pascal_case.symbols = constants
dotnet_naming_rule.constants_pascal_case.style = constants_pascal

# Interfaces: begin with I
dotnet_naming_symbols.interfaces.applicable_kinds = interface

dotnet_naming_style.interfaces_i_prefix.required_prefix = I
dotnet_naming_style.interfaces_i_prefix.capitalization = pascal_case

dotnet_naming_rule.interfaces_begin_with_i.severity = error
dotnet_naming_rule.interfaces_begin_with_i.symbols = interfaces
dotnet_naming_rule.interfaces_begin_with_i.style = interfaces_i_prefix

##########
# No `this.` qualification
##########
dotnet_style_qualification_for_field = false:error
dotnet_style_qualification_for_property = false:error
dotnet_style_qualification_for_method = false:error
dotnet_style_qualification_for_event = false:error

##########
# Braces
##########
csharp_prefer_braces = true:error
dotnet_diagnostic.IDE0011.severity = error

##########
# New line before else
##########
csharp_new_line_before_else = true

##########
# Prefer `is null` over `== null`
##########
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:error
dotnet_diagnostic.IDE0041.severity = error  # Use 'is null' check :contentReference[oaicite:0]{index=0}

##########
# Prefer switch expressions
##########
csharp_style_prefer_switch_expression = true:error
dotnet_diagnostic.IDE0066.severity = error :contentReference[oaicite:1]{index=1}

##########
# Usings: outside namespace, sorted, ungrouped, remove unnecessary
##########
csharp_using_directive_placement = outside_namespace:error
dotnet_diagnostic.IDE0065.severity = error :contentReference[oaicite:2]{index=2}

dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false

dotnet_diagnostic.IDE0005.severity = error  # Remove unnecessary usings :contentReference[oaicite:3]{index=3}

##########
# File-scoped namespaces; one namespace per file
##########
csharp_style_namespace_declarations = file_scoped:error
dotnet_diagnostic.IDE0161.severity = error  # Prefer file-scoped when configured :contentReference[oaicite:4]{index=4}
dotnet_diagnostic.IDE0160.severity = none   # Avoid inverse rule noise when preferring file-scoped :contentReference[oaicite:5]{index=5}

##########
# Prefer `using` declaration (C# 8+): `using var x = ...;`
##########
csharp_prefer_simple_using_statement = true:error
dotnet_diagnostic.IDE0063.severity = error :contentReference[oaicite:6]{index=6}

##########
# Use readonly where possible
##########
dotnet_style_readonly_field = true:error
dotnet_diagnostic.IDE0044.severity = error :contentReference[oaicite:7]{index=7}
